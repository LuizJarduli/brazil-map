{
  "name": "brazil-mentioned-map",
  "version": "1.1.0",
  "description": "A simple interactive svg Brazil map web component",
  "main": "./dist/brazil-mentioned.js",
  "module": "./dist/brazil-mentioned.js",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build:npm": "npx tsc && npx vite build --config vite.config.npm.js && npm run postbuild:npm",
    "build:cdn": "npx tsc && npx vite build --config vite.config.cdn.js",
    "build:watch": "npx tsc --watch",
    "publish": "npm publish",
    "postbuild:npm": "cp package.json ./dist && cp README.md ./dist && cp LICENSE ./dist && cp CHANGELOG.md ./dist"
  },
  "contributors": [
    "LuizJarduli"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/LuizJarduli/brazil-mentioned.git"
  },
  "files": [
    "dist"
  ],
  "keywords": [
    "Brazil",
    "svg",
    "map",
    "meme",
    "lit",
    "webcomponents",
    "typescript"
  ],
  "author": "Luiz Miguel luizjarduli@gmail.com",
  "license": "BSD-2-Clause",
  "bugs": {
    "url": "https://github.com/LuizJarduli/brazil-mentioned/issues"
  },
  "homepage": "https://github.com/LuizJarduli/brazil-mentioned#readme",
  "dependencies": {
    "lit": "~3.1.2"
  },
  "devDependencies": {
    "@rollup/plugin-node-resolve": "~15.2.3",
    "@rollup/plugin-terser": "~0.4.4",
    "@types/node": "~20.11.20",
    "@typescript-eslint/eslint-plugin": "~6.21.0",
    "@web/rollup-plugin-html": "~2.3.0",
    "eslint": "~8.57.0",
    "eslint-config-prettier": "~9.1.0",
    "eslint-config-standard-with-typescript": "~43.0.1",
    "eslint-plugin-import": "~2.29.1",
    "eslint-plugin-lit": "~1.11.0",
    "eslint-plugin-n": "~16.6.2",
    "eslint-plugin-promise": "~6.1.1",
    "rollup-plugin-minify-html-literals": "~1.2.6",
    "rollup-plugin-summary": "~2.0.0",
    "terser": "~5.30.2",
    "ts-lit-plugin": "~2.0.2",
    "typescript": "~5.3.3",
    "vite": "~5.1.4"
  }
}
